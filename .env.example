# Wix Printer Service Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///data/wix_printer.db

# Wix API Configuration (API Key)
WIX_API_KEY=your_wix_api_key_here
WIX_SITE_ID=your_wix_site_id_here
WIX_API_BASE_URL=https://www.wixapis.com

# Wix Webhook Configuration
WIX_WEBHOOK_SECRET=your_webhook_secret_here
WIX_WEBHOOK_REQUIRE_SIGNATURE=true

# Public URL Configuration
PUBLIC_DOMAIN=printer.example.com
PUBLIC_URL_TIMEOUT=10
PUBLIC_URL_CHECK_INTERVAL=300

# Printer Configuration
PRINTER_TYPE=epson
PRINTER_INTERFACE=usb
PRINTER_VENDOR_ID=04b8
PRINTER_PRODUCT_ID=0e32

# USB Printer Configuration (required for USB printers)
PRINTER_USB_VENDOR_ID=0x04b8
PRINTER_USB_PRODUCT_ID=0x0e32

# Network Printer Configuration (alternative to USB)
PRINTER_IP=192.168.1.100
PRINTER_PORT=9100

# Service Configuration
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0
LOG_LEVEL=INFO

# Receipt Configuration
RECEIPT_WIDTH=80
RECEIPT_FONT_SIZE=12

# Recovery Manager Settings (Story 2.2)
RECOVERY_BATCH_SIZE=5
RECOVERY_BATCH_DELAY=2.0
RECOVERY_MAX_RETRIES=3
RECOVERY_VALIDATION_TIMEOUT=30

# Notification Service Settings (Story 2.3)
NOTIFICATION_ENABLED=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_FROM_EMAIL=your-email@gmail.com
NOTIFICATION_TO_EMAILS=manager@restaurant.com,owner@restaurant.com
RESTAURANT_NAME=Your Restaurant Name

# Monitoring Settings
MONITORING_ENABLED=true
MONITORING_HEALTH_CHECK_INTERVAL=300
MONITORING_PERFORMANCE_INTERVAL=600
ENABLE_CUSTOMER_RECEIPT=true

# Restaurant Branding
RESTAURANT_NAME=Mein Restaurant
RESTAURANT_ADDRESS=Musterstra√üe 123, 12345 Musterstadt
RESTAURANT_PHONE=+49 123 456789
RESTAURANT_EMAIL=info@meinrestaurant.de
TAX_RATE=0.19
VAT_ID=DE123456789

# Receipt Layout
RECEIPT_WIDTH=32
DATE_FORMAT=%d.%m.%Y %H:%M

# Database Configuration (optional, defaults to wix_printer_service.db)
# DATABASE_PATH=wix_printer_service.db

# Logging Configuration (optional)
# LOG_LEVEL=INFO
